{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "buildCommand": "npm install && npm run build"
    },
    "deploy": {
      "startCommand": "serve -s build",
      "healthcheckPath": "/",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
    }
  }
  